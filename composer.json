{
    "name": "dtgorski/avronaut",
    "description": "Apache Avro IDL Transpiler",
    "homepage": "https://github.com/dtgorski/avronaut",
    "keywords": [ "avro", "apache", "idl", "avsc", "avdl", "avpr", "php" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel T. Gorski <dtg [at] lengo [dot] org>"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.9",
        "vimeo/psalm": "^5.22"
    },
    "autoload": {
        "psr-4": {
            "Avronaut\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Avronaut\\Tests\\": "tests/src/"
        }
    },
    "minimum-stability": "stable"
}
